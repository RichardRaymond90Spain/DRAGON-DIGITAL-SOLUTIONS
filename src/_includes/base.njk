        <div class="container">
            <div class="logo">
                <a href="/">
                    <img src="/assets/images/dds_logo.svg" alt="Company logo" width="60" height="45">
                    <span>Dragon Digital Solutions</span>
                </a>
            </div>
            {% include "Component/navbar.njk" %}
        </div>
    </header>
    
    <main>
        {{ content | safe }}
    </main>
    
